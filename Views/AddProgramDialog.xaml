<Window x:Class="StartupManager.Views.AddProgramDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="添加启动程序" Height="350" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,8,0,4"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="Padding" Value="15,6"/>
            <Setter Property="MinWidth" Value="75"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 程序名称 -->
        <Label Grid.Row="0" Content="程序名称:"/>
        <TextBox Grid.Row="1" Name="TxtName" 
                 ToolTip="为此启动项指定一个名称"/>
        
        <!-- 程序路径 -->
        <Label Grid.Row="2" Content="程序路径:"/>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" Name="TxtPath"
                     ToolTip="选择要添加到启动项的程序文件"
                     Margin="0,0,8,0"/>
            <Button Grid.Column="1" Name="BtnBrowse" Content="浏览..."
                    Click="BtnBrowse_Click" Margin="0"/>
        </Grid>

        <!-- 启动参数 -->
        <Label Grid.Row="4" Content="启动参数 (可选):"/>
        <TextBox Grid.Row="5" Name="TxtArguments"
                 ToolTip="程序启动时的命令行参数，如果不需要可以留空"/>

        <!-- 空白区域 -->
        <Grid Grid.Row="6"/>

        <!-- 按钮 -->
        <StackPanel Grid.Row="7" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,15,0,15">
            <Button Name="BtnOK" Content="确定" IsDefault="True"
                    Click="BtnOK_Click"/>
            <Button Name="BtnCancel" Content="取消" IsCancel="True"
                    Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
